<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:backgroundTint="@color/white"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tvInput"
        android:layout_width="match_parent"
        android:layout_height="206dp"
        android:layout_margin="-8dp"
        android:background="@color/resultcolor"
        android:gravity="bottom|right"
        android:padding="10dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="60sp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:textColor="@color/white"
            android:onClick="onClear"
            android:id="@+id/btnClear"
            android:background="@drawable/clearbutton"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="AC   "
            android:textAlignment="textEnd"
            android:textSize="30sp"
            android:textStyle="normal">

        </Button>



        <Button
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:onClick="onOperator"
            android:id="@+id/btnDivide"
            android:background="@drawable/operationbutton"
            android:layout_height="match_parent"
            android:textStyle="normal"
            android:text="/"
            android:textSize="40sp"
            android:textAlignment="center"
            android:layout_weight="1"></Button>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">


        <Button
            android:textColor="@color/white"
            android:onClick="onDigit"
            android:background="@drawable/button"
            android:id="@+id/btnSeven"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="7"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="normal"
            android:layout_weight="1"></Button>
        <Button
            android:textColor="@color/white"
            android:onClick="onDigit"
            android:background="@drawable/button"
            android:id="@+id/btnEight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="8"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="normal"
            android:layout_weight="1"></Button>
        <Button
            android:textColor="@color/white"
            android:onClick="onDigit"
            android:background="@drawable/button"
            android:id="@+id/btnNine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:text="9"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="normal"
            android:layout_weight="1"></Button>
        <Button
            android:textColor="@color/white"
            android:onClick="onOperator"
            android:background="@drawable/operationbutton"
            android:id="@+id/btnMultiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textStyle="normal"
            android:text="*"
            android:textSize="40sp"
            android:textAlignment="center"
            android:layout_weight="1"></Button>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"

        android:orientation="horizontal">


        <Button
            android:textColor="@color/white"
            android:onClick="onDigit"
            android:background="@drawable/button"
            android:id="@+id/btnFour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:text="4"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="normal"
            android:layout_weight="1"></Button>
        <Button
            android:textColor="@color/white"
            android:onClick="onDigit"
            android:background="@drawable/button"
            android:id="@+id/btnFive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="5"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="normal"
            android:layout_weight="1"></Button>
        <Button
            android:textColor="@color/white"
            android:onClick="onDigit"
            android:background="@drawable/button"
            android:id="@+id/btnSix"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="6"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="normal"
            android:layout_weight="1"></Button>

        <Button
            android:textColor="@color/white"
            android:id="@+id/btnSubtract"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/operationbutton"
            android:onClick="onOperator"
            android:text="-"
            android:textAlignment="center"
            android:textSize="45sp"
            android:textStyle="normal"></Button>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"

        android:orientation="horizontal">


        <Button
            android:textColor="@color/white"
            android:onClick="onDigit"
            android:background="@drawable/button"
            android:id="@+id/btnOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="normal"
            android:layout_weight="1"></Button>
        <Button
            android:textColor="@color/white"
            android:onClick="onDigit"
            android:background="@drawable/button"
            android:id="@+id/btnTwo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="2"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="normal"
            android:layout_weight="1"></Button>
        <Button
            android:textColor="@color/white"
            android:onClick="onDigit"
            android:background="@drawable/button"
            android:id="@+id/btnThree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="3"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="normal"
            android:layout_weight="1"></Button>
        <Button
            android:textColor="@color/white"
            android:onClick="onOperator"
            android:background="@drawable/operationbutton"
            android:id="@+id/bbtnAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textStyle="normal"
            android:text="+"
            android:textSize="40sp"
            android:textAlignment="center"
            android:layout_weight="1"></Button>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:showDividers="middle"

        >


        <Button
            android:textColor="@color/white"
            android:onClick="onDigit"
            android:background="@drawable/button"
            android:id="@+id/btnZero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="normal"
            android:layout_weight="2"></Button>
        <Button
            android:textColor="@color/white"
            android:textAlignment="center"
            android:text="."
            android:textSize="40sp"
            android:background="@drawable/button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="onDecimalPoint"
            android:id="@+id/btnDecimal"/>
        <Button
            android:textColor="@color/white"
            android:onClick="onEqual"
            android:background="@drawable/operationbutton"
            android:id="@+id/btnEqual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textStyle="normal"
            android:text="="
            android:textSize="40sp"
            android:textAlignment="center"
            android:layout_weight="1"></Button>


    </LinearLayout>




</LinearLayout>